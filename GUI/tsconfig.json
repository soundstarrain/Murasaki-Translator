{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@renderer/*": [
                "src/renderer/src/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}