[Unit]
Description=Murasaki OpenAI Proxy Server
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/murasaki/openai_proxy
Environment="LLAMA_SERVER_URL=http://127.0.0.1:8080"
Environment="PORT=8000"
ExecStart=/opt/murasaki/venv/bin/uvicorn server:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
